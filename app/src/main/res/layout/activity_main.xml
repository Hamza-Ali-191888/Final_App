<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/mainlayout"
    >
    <DigitalClock
        android:layout_marginTop="18sp"
        android:id="@+id/clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#FFFFFF"

        />

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/mic1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mic"
        android:layout_marginLeft="8sp"

        />

    <ImageView
        android:paddingTop="13dp"
        android:layout_marginRight="55dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/setting" />

    <ImageView
        android:id="@+id/power_off"
        android:layout_marginTop="13sp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/power" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fillViewport="true"
        android:orientation="horizontal"
        android:scrollbars="none"
        android:layout_below="@id/mainlayout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/music_player"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="100dp"
                    android:src="@drawable/music"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="480dp"
                    android:text="Tap To Play Music"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    />

            </RelativeLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageView
                    android:id="@+id/speed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="100dp"
                    android:src="@drawable/speed"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="480dp"
                    android:text="Tap To See Speed"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="100dp"
                    android:src="@drawable/phone"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="480dp"
                    android:text="Tap To Open Phone Book"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="100dp"
                    android:src="@drawable/message"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="480dp"
                    android:text="Tap To View Messages"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="100dp"
                    android:src="@drawable/map"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="480dp"
                    android:text="Tap To Open Google Map"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                <ImageView
                    android:id="@+id/parking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="100dp"
                    android:src="@drawable/parking"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="480dp"
                    android:text="Tap To See Parking"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>




